{
  "expo": {
    "name": "Smart Cart",
    "slug": "my-shopping-cart-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.sarmillah.shoppingcart",
      "supportsTablet": true
    },
    "android": {
      "package": "com.sarmillah.shoppingcart",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "17558f68-5377-4a0b-9b9f-336011430b67"
      }
    },
    "owner": "ryzen_7788",
    "plugins": [
      [
        "react-native-ble-plx",
        {
          "bluetoothAlwaysPermission": "Allow to connect to nearby smart carts.",
          "bluetoothPeripheralPermission": "Needed to communicate with your shopping cart."
        }
      ]
    ]
  }
}
